// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Danmu {
  id         Int      @id @default(autoincrement())
  roomId     String
  msg        String
  uid        String
  uname      String
  badge      String?
  identity   String?
  raw        String
  messageId  String
  updateTime DateTime @default(now())
}
